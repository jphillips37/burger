<script type="text/javascript">
    $(".devour-it").on("click", function(event){
        var id = $(this).attr("id");

        $.ajax("/api/burgers/"+id, {
            type: "PUT"
        }).then(function(){
            location.reload();
        });
    });

    $("#add").on("click", function(event){
        var newBurger = $("#new-burger").val();

        var burgerObject = {
            newBurger: newBurger
        };

        $.ajax("/api/burgers", {
            type: "POST",
            data: burgerObject
        }).then(function(){

